<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

        <!--Блок с картинками-->
        <LinearLayout android:id="@+id/pokemon_pics"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="2dp">

            <!--Картинка покемона пред. эвлолюции-->
            <GridLayout
                android:id="@+id/prev_evo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_gravity="center_vertical|left"
                android:paddingBottom="1dp">
                    <TextView
                        android:id="@+id/img_prev_text"
                        android:layout_columnSpan="2"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:id="@+id/img_evo_prev"
                        android:layout_columnSpan="2"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:id="@+id/name_prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_columnSpan="2"/>

                <LinearLayout android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_columnSpan="2">
                    <ImageView
                        android:id="@+id/prev_line_type1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginLeft="1dp"
                        android:layout_height="3dp"
                        android:layout_width="42dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/prev_line_type2"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginRight="1dp"
                        android:layout_height="3dp"
                        android:layout_width="42dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

            </GridLayout>

            <!--Основная картинка-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/pokemon_img"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>
            </RelativeLayout>

            <!--Картинка покемона след. эволюции-->
            <GridLayout
                    android:id="@+id/next_evo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_gravity="center_vertical|right"
                    android:paddingBottom="1dp">
                    <TextView
                        android:id="@+id/img_next_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="2"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:id="@+id/img_evo_next"
                        android:layout_columnSpan="2"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:id="@+id/name_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_columnSpan="2"
                        android:layout_gravity="center_horizontal"/>
                    <LinearLayout android:orientation="horizontal"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_columnSpan="2">
                        <ImageView
                            android:id="@+id/next_line_type1"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginLeft="1dp"
                            android:layout_height="3dp"
                            android:layout_width="42dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/next_line_type2"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginRight="1dp"
                            android:layout_height="3dp"
                            android:layout_width="42dp"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                </GridLayout>

        </LinearLayout>

        <!--Блок имени, типов, статистики и остального-->
        <!--Блок с именем-->
        <LinearLayout
                android:id="@+id/grid_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingBottom="1dp"
                android:background="@drawable/forname"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/pokemon_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pokemon_name_hint"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/line_type1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginLeft="1dp"
                        android:layout_height="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/line_type2"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginRight="1dp"
                        android:layout_height="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>

        <!--Блок с типами-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <TextView
                    android:id="@+id/pokemon_type1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    />

                <TextView
                    android:id="@+id/pokemon_type2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    />
            </LinearLayout>

        <!--Вес, рост, номер-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="15dp">

            <!--Вес и рост-->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3">
                <!--Вес-->
                <TextView
                        android:text="@string/weight"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/pokemon_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"/>
                <TextView
                        android:text="@string/weight_units"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"/>
                <!--Рост-->
                <TextView
                    android:text="@string/height"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/pokemon_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:text="@string/height_units"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"/>
            </GridLayout>

            <!--Номер-->
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textSize="24sp"
                    android:text="@string/num"/>
            <TextView
                    android:id="@+id/number"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:textSize="24sp"/>


        </LinearLayout>

        <!--Заголовок "Базовая статистика и выбор уровня"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/base_stats_title"/>
            <Spinner
                android:id="@+id/level_spiner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:textSize="16sp"/>

        </LinearLayout>

        <!--Разделитель-->
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@drawable/separator"/>

        <!--Блок статистики-->
        <!--<GridLayout
